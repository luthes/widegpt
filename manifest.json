{
  "manifest_version": 3,
  "name": "BetterWideGPT",
  "version": "1.5.2",
  "description": "Scale Chat-GPT output to 100% width, but with fixes.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{354273a1-bbac-450b-95d2-10700836bba2}"
    }
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "64": "icon_64.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
